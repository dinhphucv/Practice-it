public static int maxLength(ArrayList<String> list) {
    int size = list.size();
    int length = 0;
    int max = 0;
    if(size == 0) {
        return max;
    }
    for(int i = 0; i < size; i++) {
        length = list.get(i).length();
        if(length > max) {
            max = length;
        }
    }
    return max;
}
